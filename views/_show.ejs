<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Author">Author</label>
    <div class="col-sm-10">
        <input readonly class="form-control" id="Author" maxlength="100" value="<%= model.Author %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Title">Title</label>
    <div class="col-sm-10">
        <input readonly class="form-control" id="Title" maxlength="100" value="<%= model.Title %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Subtitle">Subtitle</label>
    <div class="col-sm-10">
        <input readonly class="form-control" name="Subtitle" placeholder= "Type Article Subtitle" maxlength="100" required value="<%= model.Subtitle %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Body">Body</label>
    <div class="col-sm-10">
        <textarea readonly class="form-control" cols="20" id="Body" maxlength="500"
            rows="7"><%= model.Body %></textarea>
    </div>
</div>